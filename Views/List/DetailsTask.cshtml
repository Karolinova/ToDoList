@using ToDoList_gh.ViewModels
@model TasksViewModel

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                @foreach (var zadanie in Model.Zadanias)
                {
                    var zadanieZak = Model.Zadania_Zakonczone.FirstOrDefault(ze => ze.Zadanie_id == zadanie.Zadanie_id);
                    <span class="card-title">@zadanie.Zadanie</span>
                    <p>
                        Opis: @zadanie.Opis <br />
                        Data zgłoszenia: @zadanie.StartTime.ToString("yyyy-MM-dd")<br />
                        Przewidywany termin realizacji: @zadanie.DoTime?.ToString("yyyy-MM-dd")<br />
                        Data zakończenia: @(zadanieZak?.FinishTime?.ToString("yyyy-MM-dd") ?? " ")<br />
                    </p>
                }
            </div>
            <div class="card-action">
                <a href="/List/ListOfTasks" class="btn">Wróć</a>
            </div>
        </div>
    </div>
</div>